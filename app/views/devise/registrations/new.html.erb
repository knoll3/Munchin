<div class="booyah-box col-10 offset-1 text-center">
  <h2>Sign up</h2>
  <br />

  <%= simple_form_for(resource, as: resource_name, 
                                url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,    required: true, label: false, placeholder: 'Email',
                             input_html: {style: 'width:300px'}, autofocus: true %>
      <%= f.input :password, required: true, label: false, placeholder: 'Password',
                             input_html: {style: 'width:300px'} %>
      <div class="form-note">
        <%= "#{@minimum_password_length} characters minimum" if @minimum_password_length %>
      </div>
      <%= f.input :password_confirmation, required: true, label: false, 
                                          placeholder: 'Password Confirmation',
                                          input_html: {style: 'width:300px'} %>
    </div>

    <br />

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <br />

  <%= render "devise/shared/links" %>

</div>