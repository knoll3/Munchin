<div class="booyah-box col-10 offset-1 text-center">
  <h2>Change your password</h2>
  <br />

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :password, required: true, label: false, placeholder: 'New password' %>
      <div class="form-note">
        <%= "#{@minimum_password_length} characters minimum" if @minimum_password_length %>
      </div>
      <%= f.input :password_confirmation, required: true, label: false, 
                                          placeholder: 'Confirm new password' %>
    </div>

    <br />

    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <br />

  <%= render "devise/shared/links" %>

</div>