<div class="booyah-box col-10 offset-1 text-center">
  <h2>Log in</h2>
  <br />

  <%= simple_form_for(resource, as: resource_name, 
                                url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,    label: false, required: false, 
                             placeholder: "Email", autofocus: true, 
                             input_html: {style: 'width:300px'} %>
      <%= f.input :password, label: false, required: false, 
                             placeholder: "Password",
                             input_html: {style: 'width:300px'} %>
    </div>
    <br />

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <br />

  <%= render "devise/shared/links" %>
</div>