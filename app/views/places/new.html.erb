<div class="booyah-box col-10 offset-1 text-center">
  <h2>Enter your place details</h2>
  <br />

  <%= simple_form_for @place do |f| %>
    <div class="form-inputs">
      <%= f.input :name,    label: false, required: false, 
                             placeholder: "Name", autofocus: true %>
      <%= f.input :address, label: false, required: false, 
                             placeholder: "Address" %>
      <%= f.input :description, label: false, required: false, 
                             placeholder: "Description", class: 'text-field' %>
    </div>
    <br />

    <div class="form-actions">
      <%= f.button :submit, "Create", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>